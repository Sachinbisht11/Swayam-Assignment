import java.util.* ;
import java.io.*; 
import java.util.ArrayList;

public class Solution {
    public static ArrayList<Integer> buildHeap(ArrayList<Integer> arr, int n) {
        //  Write your code here...
        for(int i=(n/2)-1;i>=0;i--){
            heapify(arr,n,i);
        }
        return arr;
    }
    static void heapify(ArrayList<Integer> arr, int n,int i){
        int smallest=i;
        int left=2*i+1;
        int right=2*i+2;
        if(left<n && arr.get(left)>arr.get(smallest)){
            smallest=left;
        }
        if(right<n && arr.get(right)>arr.get(smallest)){
            smallest=right;
        }
        if(smallest!=i){
            int temp=arr.get(i);
            arr.set(i,arr.get(smallest));
            arr.set(smallest,temp);
            heapify(arr,n,smallest);
        }
    }
}
