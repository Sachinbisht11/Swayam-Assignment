class Solution {
    public int integerBreak(int n) {
        int p=1;
        if(n<=3) return n-1;
        while(n>0){
            if(n%3==1 && n>3){
                n=n-2;
                p=p*2;
            }
            else if(n>=3){
                n=n-3;
                p=p*3;
            }
            else{
                p=p*n;
                n=0;
            }
        }
        return p;
    }
}
