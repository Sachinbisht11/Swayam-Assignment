import java.util.*;
class Solution {
    public int evaluatePostfix(String[] arr) {
        // code here
        Stack<Integer> stack=new Stack<>();
        for(int i=0;i<arr.length;i++){
                if(arr[i].equals("+")){
                    int a=stack.pop();
                    int b=stack.pop();
                    stack.push(b+a);
                }
                else if(arr[i].equals("-")){
                    int a=stack.pop();
                    int b=stack.pop();
                    stack.push(b-a);
                }
                else if(arr[i].equals("*")){
                    int a=stack.pop();
                    int b=stack.pop();
                    stack.push(b*a);
                }
                else if(arr[i].equals("/")){
                    int a=stack.pop();
                    int b=stack.pop();
                    int div = b / a;
                    if ((b ^ a) < 0 && b % a != 0) div--;
                    stack.push(div);
                }
                else if(arr[i].equals("^")){
                    int a=stack.pop();
                    int b=stack.pop();
                    stack.push((int)Math.pow(b,a));
                }
                else{
                    stack.push(Integer.parseInt(arr[i]));
                }
        }
        return stack.pop();
    }
}
