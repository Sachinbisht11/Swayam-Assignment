/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public TreeNode createBinaryTree(int[][] descriptions) {
        HashMap<Integer,TreeNode> map=new HashMap<>();
        HashSet<Integer> children=new HashSet<>();
        for(int[] nums: descriptions){
            int pv=nums[0];
            int cv=nums[1];
            int lc=nums[2];
            map.putIfAbsent(pv,new TreeNode(pv));
            TreeNode parent=map.get(pv);
            map.putIfAbsent(cv,new TreeNode(cv));
            TreeNode child=map.get(cv);
            if(lc==1){
                parent.left=child;
            }
            else{
                parent.right=child;
            }
            children.add(cv);
        }
        for(int val:map.keySet()){
            if(!children.contains(val)){
                return map.get(val);
            }
        }
        return null;
    }
}
