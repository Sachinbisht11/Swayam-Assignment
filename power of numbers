class Solution {
    public int reverseExponentiation(int n) {
        int rev = reverse(n, 0);
        return power(n, rev);
    }

    public int reverse(int n, int rev) {
        if (n == 0) return rev;
        return reverse(n / 10, rev * 10 + n % 10);
    }

    public int power(int base, int exp) {
        if (exp == 0) return 1;
        int half = power(base, exp / 2);
        int result = half * half;
        if (exp % 2 != 0)
            result *= base;
        return result;
    }
}
